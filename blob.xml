<routing-policy xmlns="alu:nuage:bgp:routing:policy">
        <defined-sets>
                <prefix-sets>
                        <prefix-set>
                                <prefix-set-name>TEST-1-export-prefix</prefix-set-name>
                                <prefix>
                                        <ip-prefix>172.99.16.0/20</ip-prefix>
                                           <masklength-range>20..24</masklength-range>
                                </prefix>
                        </prefix-set>
                        <prefix-set>
                                <prefix-set-name>TEST-2-export-prefix</prefix-set-name>
                                <prefix>
                                      <ip-prefix>172.99.48.0/20</ip-prefix>
                                       <masklength-range>20..24</masklength-range>
                               </prefix>                                                                                                                         
                       </prefix-set>
                </prefix-sets>
                               <community-sets>
                                                <community-set>
                                                                <community-set-name>TEST-export-comm</community-set-name>
                                                                                <community>
                                                                                                <community-name>65140:6000</community-name>
                                                                                </community>
                                                </community-set>
                                </community-sets>
</defined-sets>
        <policy-definition>
               <statements>
                        <statement>
                                <name>TEST-export-match1</name>
                                <conditions>
                                        <match-prefix-set>
                                                <prefix-set>TEST-1-export-prefix</prefix-set>
                                        </match-prefix-set>
                                </conditions>
                                <actions>
                                        <accept-route-set>
                                                                <accept-route/>
                                                                <community-set>TEST-export-comm</community-set>
                                          </accept-route-set>
                                </actions>
                        </statement>
                        <statement>
                                <name>TEST-export-match2</name>
                                <conditions>
                                        <match-prefix-set>
                                                <prefix-set>TEST-2-export-prefix</prefix-set>
                                        </match-prefix-set>
                                </conditions>
                                <actions>
                                        <accept-route-set>
                                                                <accept-route/>
                                                                <community-set>TEST-export-comm</community-set>
                                           </accept-route-set>
                                </actions>
                        </statement>
                </statements>
        </policy-definition>
</routing-policy>
